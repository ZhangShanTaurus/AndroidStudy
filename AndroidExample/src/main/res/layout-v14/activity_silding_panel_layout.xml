<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_style">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/title_icon_back_style"
            android:contentDescription="@string/title"
            android:paddingLeft="@dimen/padding_10"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_text_style"
            android:text="@string/title" />

        <TextView style="@style/title_line_style" />
    </RelativeLayout>

    <android.support.v4.widget.SlidingPaneLayout
        android:id="@+id/sliding_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/left_fragment"
            android:name="com.android.example.ui.layout.fragment.SlidingPanelLeftFragment"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left" />

        <fragment
            android:id="@+id/right_fragment"
            android:name="com.android.example.ui.layout.fragment.SlidingPanelRightFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right" />
    </android.support.v4.widget.SlidingPaneLayout>
</LinearLayout>